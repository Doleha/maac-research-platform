  "license": "MIT",
  "dependencies": {
    "@maac/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "@vitest/coverage-v8": "^1.5.0"
  },
  "peerDependencies": {
    "@maac/types": "workspace:*"
  }
