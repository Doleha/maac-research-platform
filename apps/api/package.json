{
  "name": "@maac/api",
  "version": "0.1.0",
  "private": true,
  "description": "Fastify backend API for MAAC Research Platform",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@maac/framework": "workspace:*",
    "@maac/infrastructure": "workspace:*",
    "@maac/experiment-orchestrator": "workspace:*",
    "@maac/statistical-analysis": "workspace:*",
    "@maac/types": "workspace:*",
    "fastify": "^4.26.1",
    "@fastify/cors": "^9.0.1",
    "dotenv": "^16.4.5",
    "@prisma/client": "^5.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "prisma": "^5.11.0"
  }
}
