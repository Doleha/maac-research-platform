{
  "name": "@maac/api",
  "version": "0.1.0",
  "private": true,
  "description": "Fastify backend API for MAAC Research Platform",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@maac/framework": "workspace:*",
    "@maac/infrastructure": "workspace:*",
    "@maac/experiment-orchestrator": "workspace:*",
    "@maac/statistical-analysis": "workspace:*",
    "@maac/types": "workspace:*",
    "fastify": "^4.26.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "zod": "^3.23.6",
    "bullmq": "^5.7.0",
    "ioredis": "^5.4.1",
    "@prisma/client": "^5.13.0",
    "ai": "^3.1.0",
    "@ai-sdk/anthropic": "^0.0.20",
    "@ai-sdk/openai": "^0.0.24"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "prisma": "^5.13.0",
    "vitest": "^1.5.0"
  }
}
